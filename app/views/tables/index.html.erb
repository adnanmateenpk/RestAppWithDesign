<%= link_to("Add Table",{:action=>'new'},:class=>'action table new') %>
<h1>Posts</h1>
<table class="listing" summary="Table list">
  <tr class="header">
    <th>&nbsp;</th>
    <th>Title</th>
    <th>No. of Seats</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @tables.each_with_index do |d,i| %>
  <tr class="">
    <td class="position"><%= i+1 %></td>
    <td><%= d.title %></td>
     <td><%= d.chairs %></td>
    
    <td><%= d.status ? "Published" : "Unpublished" %></td>
  
    <td class="actions">
     	  
      	<%= link_to("Edit",{:action => 'edit' , :slug => d.slug}, :class => 'action edit') %>
      	<%= link_to 'Delete' , {:action => 'destroy' , :slug => d.slug}, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, "data-type" => :json , :class => 'delete_row' %>
      
    </td>
  </tr>
  <% end %>
</table>