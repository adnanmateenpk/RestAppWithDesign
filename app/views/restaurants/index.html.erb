<div class="container-fluid content">

<div class="breadcrumb">restaurantes<% if user_signed_in? %>
      <strong> | <%= current_user.name %></strong>
      <% end %><strong> | <%= link_to("Add Restaurant",{:action=>'new'},:class=>'action restaurant new' , :style => "") %>
</strong></div>
      <div class="row table-yellow">
<table class="table table-striped" summary="Restaurant list">
  <tr class="header">
    <th>&nbsp;</th>
    <th>Title</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @restaurants.each_with_index do |d,i| %>
  <tr class="">
    <td class="position"><%= i+1 %></td>
    <td><%= d.title %></td>
    <td><%= d.status ? "Published" : "Unpublished" %></td>
    <td class="actions">
        <% if d.branches.count > 0 %>
     	  <%= link_to("Details", edit_restaurant_detail_path(d.slug,d.branches[0].slug), :class => 'action branches', :style => "color:black") %> 
        <% else %>
         <%= link_to("Details", new_restaurant_detail_path(d.slug), :class => 'action branches', :style => "color:black") %> 
         <% end %>
        |
      	<%= link_to("Edit", {:action => 'edit', :slug => d.slug}, :class => 'action edit' , :style => "color:black") %> |
      	<%= link_to 'Delete' , {:action => 'destroy' , :slug => d.slug}, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, "data-type" => :json , :class => 'delete_row' , :style => "color:black" %> |
        <a class="reservation-button" data-id="<%= d.id  %>" style="color:black" >Reservations</a>
    </td>
  </tr>
  <% end %>
  
</table>
</div>
</div>

</div>
 <div class="modal fade" id="reservationDate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <img src="/assets/header-image.png" class="img-responsive" style="margin:0 auto;">
            <h2>Select Date</h2>
          </div>
          <div class="modal-body">
           <%= form_tag({:controller=> :reservations , :action => :list}, method: :post, :class=>"form-horizontal" ) do  %>
              <div class="form-group">
                <div class="col-xs-10 col-xs-offset-1">
                  <%= text_field_tag(:date, ""  , :class => 'datepicker form-control' , :placeholder =>"Fecha") %>
                </div>
              </div>
             <input type="hidden" name="id" id="rest-id" />
              <div class="form-group">
                <div class="col-xs-offset-2 col-xs-8">
                  <button type="submit" class="form-control">Proceed To Reservations</button>
                </div>
              </div>
          <% end %>
          </div>
          
        </div>
      </div>
    </div>