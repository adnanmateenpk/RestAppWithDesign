<%= error_messages_for(@page) %>
<table summary="Page form fields">
  <tr>
    <th><%= f.label(:title,"Title")%></th>
    <td><%= f.text_field(:title)%></td>
  </tr>
  <tr>
    <th><%= f.label(:slug,"Slug")%></th>
    <td><%= f.text_field(:slug)%></td>
  </tr>
  <tr>
    <th><%= f.label(:position,"Position")%></th>
    <td><%= f.select(:position, 1..@page_count)%></td>
  </tr>
  <tr>
    <th><%= f.label(:status, "Status") %></th>
    <td><%= f.select(:status, options_for_select([['Published',1],['Unpublished',0]],(@page.status ? 1 : 0))) %></td>
  </tr>
  <tr>
    <th><%= f.label(:layout_id, "Layout") %></th>
    <td><%= f.select(:layout_id, options_from_collection_for_select(@layouts,"id","name",@page.layout_id) %></td>
  </tr>
  <tr>
    <th><%= f.label(:featured_image) %></th>
    <td><%= f.file_field(:featured_image) %></td>
  </tr>
  <tr>
    <th><%= f.label(:html,"Content") %></th>
    <td><%= f.text_area(:html, :size => '40x10') %></td>
  </tr>
  <tr>
    <th><%= f.label(:meta_keywords,"Meta Keywords")%></th>
    <td><%= f.text_field(:meta_keywords)%></td>
  </tr>
  <tr>
    <th><%= f.label(:meta_description,"Meta Description")%></th>
    <td><%= f.text_field(:meta_description)%></td>
  </tr>
 
</table>
